<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Interview App"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tv_description"
        android:textAlignment="center"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This application is designed to exercise and demo various competencies in developing Android Applications."/>

    <Button
        android:id="@+id/btn_recycle_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Recycle View Demo" />

    <Button
        android:id="@+id/btn_notif_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Notifications Demo" />

    <Button
        android:id="@+id/btn_service_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Service Demo" />

    <Button
        android:id="@+id/btn_network_req_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Network Request Demo" />

    <Button
        android:id="@+id/btn_fragment_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Fragment Demo" />
</LinearLayout>
